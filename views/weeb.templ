package views

import "github.com/rasibn/hello.rasib.me/views/layout"

templ Weeb() {
	@layout.Layout("weeb only") {
		<article>
			<header>
				<h1>Weeb Zone</h1>
			</header>
			I am not a weeb.
		</article>
		<article id="anime">
			<header>
				<h2>Anime</h2>
			</header>
			@animeSection()
		</article>
		<article id="other">
			@otherThings()
		</article>
		<article id="songs">
			@songSection()
		</article>
	}
}

templ animeSection() {
	<p>Some anime that I liked (in no particular order) are:</p>
	<ul>
		<li>Bocchi the Rock</li>
		<li>Made in Abyss</li>
